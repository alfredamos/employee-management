generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Department{
  @@map("departments")
  id String @id @default(uuid())
  name String
  employees Employee[]
}

model Employee{
  id String @id @default(uuid())  
  fullName String @db.VarChar(255)
  email String @db.VarChar(255) 
  phone String 
  birthDate DateTime
  gender Gender
  department Department? @relation(fields: [departmentId], references: [id])
  departmentId String?
}

enum Gender {
  Female
  Male
}
